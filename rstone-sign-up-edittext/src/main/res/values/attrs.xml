<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--  Additional states to the default one -->
    <declare-styleable name="SignUpInputViewState">
        <attr name="state_input" format="boolean" />
        <attr name="state_error" format="boolean" />
    </declare-styleable>

    <declare-styleable name="SignUpInputView">
        <attr name="inputType" format="enum">
            <enum name="text" value="0" />
            <enum name="email" value="1" />
            <enum name="password" value="2" />
        </attr>
        <attr name="hint" format="string" />
        <attr name="inputFont" format="string" />
    </declare-styleable>

</resources>