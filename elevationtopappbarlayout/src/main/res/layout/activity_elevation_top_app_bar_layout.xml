<?xml version="1.0" encoding="utf-8"?>
<denisbuketa.android.elevationtopappbarlayout.ElevationTopAppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ElevationTopAppBarLayoutActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_app_bar_height"
        android:orientation="horizontal"
        android:background="@color/colorWhite">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Top App Bar"
            android:textColor="@color/colorBlack" />

    </LinearLayout>

    <denisbuketa.android.elevationtopappbarlayout.ScrollViewWithScrollState
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/colorGray95"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/colorGray90"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/colorGray95"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/colorGray90"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/colorGray95"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/colorGray"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/colorGray95"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/colorGray"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/colorGray95"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/colorGray"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/colorGray95"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/colorGray"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/colorGray95"/>

        </LinearLayout>

    </denisbuketa.android.elevationtopappbarlayout.ScrollViewWithScrollState>

</denisbuketa.android.elevationtopappbarlayout.ElevationTopAppBarLayout>